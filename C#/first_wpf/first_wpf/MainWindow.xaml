<Window x:Class="first_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:first_wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas x:Name="GameCanvas" Background="LightGray">
        <TextBlock Text="Próbálj meg rákattintani a gombra!" 
                   Canvas.Left="10" 
                   Canvas.Top="10" 
                   FontSize="16" 
                   FontWeight="Bold"/>

        <Button x:Name="CatchMeButton" 
                Content="Kattints rám!" 
                Width="100" 
                Height="40"
                Canvas.Left="250"
                Canvas.Top="200"
                MouseEnter="CatchMeButton_MouseEnter"
                Click="CatchMeButton_Click"/>
    </Canvas>
</Window>
